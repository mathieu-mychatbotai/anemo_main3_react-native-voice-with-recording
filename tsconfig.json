{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2017"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "jsx": "react-jsx"
  },
  "include": [
    "index.ts",
    "index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "android",
    "ios",
    "example",
    "dist"
  ]
} 